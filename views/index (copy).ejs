<!DOCTYPE html>
<html>
  <head>
    <title>Video Player</title>
  </head>
  <body>
    <div id="player">
      <video id="video" width="640" height="360" controls>
        <source src="" type="video/mp4">
      </video>
    </div>
    <div id="playlist">
      <ul>
        <% for (var i = 0; i < playlist.length; i++) { %>
          <li><a href="#" onclick="playVideo('<%= playlist[i].file %>')"><%= playlist[i].title %></a></li>
        <% } %>
      </ul>
    </div>

    <script>
      function playVideo(file) {
        var video = document.getElementById('video');
        video.src = file;
        video.load();
        video.play();
      }
    </script>
  </body>
</html>
